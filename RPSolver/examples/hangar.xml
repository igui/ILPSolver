<?xml version="1.0" encoding="utf-8"?>
<input>
  <!-- Scene path (relative to this file) -->
  <scene path="hangar.dae"/>

  <!-- print output images and log on "./output" folder -->
  <output path="output"/>

  <!-- Optimization variables -->
  <conditions meshSize="200">
    <objectInSurface id="BigBox" surface="BigBox__Geometry" vertexAIndex="1" vertexBIndex="3" vertexCIndex="0" vertexDIndex="2">
    </objectInSurface>
  </conditions>

  <!-- Which aspects of the scene must be optimized  -->
  <objectives maxIterations="1000" fastEvaluationQuality="1" strategy="REFINE_ISOC_ON_END">
    <maximizeRadiance surface="BigBox"/>
  </objectives>
</input>