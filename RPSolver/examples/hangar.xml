<?xml version="1.0" encoding="utf-8"?>
<input>
  <!-- Scene path (relative to this file) -->
  <scene path="hangar.dae"/>

  <!-- print output images and log on "./output" folder -->
  <output path="output"/>

  <!-- Optimization variables -->
  <conditions meshSize="40">
    <objectInSurface id="BigBox" surface="BigBox__Geometry" vertexAIndex="0" vertexBIndex="1" vertexCIndex="2" vertexDIndex="3">
    </objectInSurface>
  </conditions>

  <!-- Which aspects of the scene must be optimized  -->
  <objectives maxIterations="1000" fastEvaluationQuality="0.001" strategy="REFINE_ISOC_ON_END">
    <maximizeRadiance surface="BigBox"/>
  </objectives>
</input>