<?xml version="1.0" encoding="utf-8"?>
<input>
  <!-- Scene path (relative to this file) -->
  <scene path="conference-simple.dae"/>

  <!-- print output images and log on "./output" folder -->
  <output path="output"/>

  <!-- Optimization variables -->
  <conditions meshSize="20">
    <objectInSurface id="LightGroup1" surface="Ceiling" light="LightPoint1"
                     vertexAIndex="0" vertexBIndex="1" vertexCIndex="2" vertexDIndex="3">
    </objectInSurface>
    <objectInSurface id="LightGroup2" surface="Ceiling" light="LightPoint2"
                     vertexAIndex="0" vertexBIndex="1" vertexCIndex="2" vertexDIndex="3">
    </objectInSurface>
    <!--<lightInSurface id="LightPlane_2" surface="Ceiling"></lightInSurface>-->
  </conditions>

  <!-- Which aspects of the scene must be optimized  -->
  <objectives maxIterations="1000" fastEvaluationQuality="0.00390625" strategy="REFINE_ISOC_ON_INTERSECTION">
    <maximizeRadiance surface="Table"/>
  </objectives>
</input>