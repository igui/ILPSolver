<?xml version="1.0" encoding="utf-8"?>
<input>
  <!-- Scene path (relative to this file) -->
  <scene path="directional.dae"/>

  <!-- print output images and log on "./output" folder -->
  <output path="output"/>
  
  <!-- Optimization variables -->
  <conditions>
    <directionalLight id="Sun"/>
  </conditions>

  <!-- Which aspects of the scene must be optimized  -->
  <objectives maxIterations="200">
    <!-- Maximize radiance on Cube surface  -->
    <maximizeRadiance surface="Suzanne" confidenceIntervalRadius="5"/>
  </objectives>  
</input>