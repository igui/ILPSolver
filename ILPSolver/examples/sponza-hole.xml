<?xml version="1.0" encoding="utf-8"?>
<input>
  <!-- Scene path (relative to this file) -->
  <scene path="sponza-hole.dae"/>

  <!-- print output images and log on "./output" folder -->
  <output path="output"/>

  <!-- Optimization variables -->
  <conditions meshSize="20">
    <objectInSurface id="Hole" surface="Ceiling-Top__Geometry" vertexAIndex="1" vertexBIndex="0" vertexCIndex="2" vertexDIndex="3"/>
  </conditions>

  <!-- Which aspects of the scene must be optimized  -->
  <objectives maxIterations="1000">
    <maximizeRadiance surface="Vase"/>
  </objectives>
</input>