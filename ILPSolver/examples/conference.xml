<?xml version="1.0" encoding="utf-8"?>
<input>
  <!-- Scene path (relative to this file) -->
  <scene path="conference.dae"/>

  <!-- print output images and log on "./output" folder -->
  <output path="output"/>

  <!-- Optimization variables -->
  <conditions>
    <lightInSurface id="LightPlane_001" surface="Ceiling"></lightInSurface>
    <lightInSurface id="LightPlane_002" surface="Ceiling"></lightInSurface>
    <lightInSurface id="LightPlane_003" surface="Ceiling"></lightInSurface>
    <lightInSurface id="LightPlane_004" surface="Ceiling"></lightInSurface>
    <lightInSurface id="LightPlane_005" surface="Ceiling"></lightInSurface>
    <lightInSurface id="LightPlane_006" surface="Ceiling"></lightInSurface>
    <lightInSurface id="LightPlane_007" surface="Ceiling"></lightInSurface>
    <lightInSurface id="LightPlane_008" surface="Ceiling"></lightInSurface>
  </conditions>

  <!-- Which aspects of the scene must be optimized  -->
  <objectives maxIterations="50000">
    <!-- Maximize radiance on floor surface with 95% and radius of 5 W -->
    <maximizeRadiance surface="Table" confidenceIntervalRadius="5"></maximizeRadiance>
  </objectives>
</input>